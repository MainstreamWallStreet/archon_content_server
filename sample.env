# ==============================================================================
# Zergling FastAPI Server Environment Variables
#
# - This file is a template. Copy it to `.env` for local development.
# - Do not commit the `.env` file to version control.
# - Variables set in the environment will override values in this file.
# ==============================================================================

# --- Application Settings ---
APP_NAME=archon-api
LOG_LEVEL=INFO
DEBUG=true
ENV="dev" # "dev", "staging", or "prod"

# --- Authentication ---
# Server API key required for all endpoints except /health.
# This is a 256-bit key for authenticating requests to the server.
# In production, this should be set in Google Secret Manager.
PERPLEXITY_RESEARCH_SERVER_API_KEY=xxx
ARCHON_API_KEY=xxx         
LANGFLOW_API_KEY=xxx
LANGFLOW_SERVER_URL=xxx                               
# --- Google Cloud Platform ---
# Your GCP Project ID.
GOOGLE_CLOUD_PROJECT=xxx
WEB_LANGFLOW_API_KEY=xxx
PINECONE_API_KEY=xxx
OPENAI_API_KEY=xxx

# ==== Server Configuration ====
HOST=0.0.0.0
PORT=8080
LANGFLOW_AUTO_LOGIN=true

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO